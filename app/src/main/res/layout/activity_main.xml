<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:gravity="center">

    <!-- Título do Jogo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo da Velha"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Status do Jogo -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vez do Jogador X"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#34495E"
        android:layout_marginBottom="30dp"
        android:padding="12dp"
        android:background="@drawable/status_background"
        android:fontFamily="sans-serif" />

    <!-- Tabuleiro do Jogo -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginBottom="30dp"
        android:background="@drawable/board_background"
        android:padding="4dp">

        <!-- Linha 1 -->
        <Button
            android:id="@+id/btn00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="0,0" />

        <Button
            android:id="@+id/btn01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="0,1" />

        <Button
            android:id="@+id/btn02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="0,2" />

        <!-- Linha 2 -->
        <Button
            android:id="@+id/btn10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="1,0" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="1,1" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="1,2" />

        <!-- Linha 3 -->
        <Button
            android:id="@+id/btn20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="2,0" />

        <Button
            android:id="@+id/btn21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="2,1" />

        <Button
            android:id="@+id/btn22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/cell_background"
            android:text=""
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="onCellClick"
            android:tag="2,2" />

    </GridLayout>

    <!-- Botão Reiniciar -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Reiniciar Jogo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/reset_button_background"
        android:onClick="onResetClick"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Placar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/score_background"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E74C3C" />

        <TextView
            android:id="@+id/tvScoreX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:layout_marginEnd="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3498DB" />

        <TextView
            android:id="@+id/tvScoreO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3498DB" />

    </LinearLayout>

</LinearLayout>